generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  orders    Order[]

  @@map("users")
}

model Category {
  id    String @id @default(uuid())
  name  String @unique
  games Game[]

  @@map("categories")
}

model Game {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  price       Float
  thumbnail   String
  stock       Int      @default(0)
  platform    String   
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  
  createdAt   DateTime @default(now())

  @@map("games")
}

model Order {
  id        String   @id @default(uuid())
  total     Float
  status    String   @default("PENDING") 
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())

  @@map("orders")
}